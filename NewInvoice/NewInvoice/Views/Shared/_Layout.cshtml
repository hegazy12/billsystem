<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Invoice System", "", "", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{if (Session["username"] != "null")
                        {
                            <li>@Html.ActionLink("Add invoice", "addbill", "bill")</li>
                            <li>@Html.ActionLink("Add manger", "addmangertobill", "bill")</li>
                            <li>@Html.ActionLink("Requsts", "requst", "my")</li>
                            <li>@Html.ActionLink("Myincoices", "myinvoice", "my")</li>
                            <li>@Html.ActionLink("Add Currency", "Currency", "Currency")</li>
                            <li>@Html.ActionLink("Add Order", "PurchaseOrder", "PurchaseOrder")</li>
                            <li>@Html.ActionLink("Add Vendor", "Vendor", "Vendor")</li>
                            <li>@Html.ActionLink("Add Project", "Project", "Project")</li>


                            <li>@Html.ActionLink("logout", "logout", "user")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("signup", "signup", "user")</li>
                            <li>@Html.ActionLink("login", "login", "user")</li>

                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
